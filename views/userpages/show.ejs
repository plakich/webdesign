<% include ../partials/header %>


   <div class="row">
      <div class="col-md-9 col-xs-9">
         <div class="thumbnail">
            <img class="image-responsive" src="<%= userpage.image%>">
            <div class="caption-full">
              
               <h4 id="captionName"><%=userpage.name%></h4>
               <hr>
               <p><%= userpage.description%></p>
              
               
            </div>
         </div>
         <div id="commentContainer" class="well">
            <form id="commentForm" action="/userpages/<%= userpage._id %>/comments" method="POST">
               <textarea name="comment[text]" id="userComment" placeholder="Add a comment to <%= userpage.name.endsWith("s") ? userpage.name + "'" : userpage.name + "'s"%> page..."></textarea>
                  <div class="text-right">
                     <button class="btn btn-success disabled">Add Comment</button>
                  </div>
            </form>
            <ul id="commentList">
            
               <% userpage.comments.forEach(function(comment){ %> 
               <li>
                  <div class="row">
                     <div class="col-md-12">
                         <strong><%= comment.author.username %></strong>
                         
                         <p>
                     
                            <%= comment.text %> 
                     
                        </p> 
                        
                        </div>
                  </div>
               </li>
               <% }); %> 
               
            </ul>
            
            
         </div>
      </div>
      <div class="col-md-3">
         <div class="list-group">
            <li class="list-group-item active">My Photos</li>
            <li class="list-group-item">My Blog</li>
            <li class="list-group-item">My Location</li>
         </div>
         <div id="map"></div>
      </div>
   </div>
   
</div><!-- /.container -->
