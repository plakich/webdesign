<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Overhyped</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <link rel="stylesheet" href="/stylesheets/main.css">
    </head>
    <body>
        
        <nav class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                      <span class="sr-only">Toggle navigation</span>
                      <span class="icon-bar"></span>
                      <span class="icon-bar"></span>
                      <span class="icon-bar"></span>
                    </button>

                    <a class="navbar-brand" href="/">OverHyped</a>
                </div>
                <div id="navbar" class="collapse navbar-collapse">
                  <ul class="nav navbar-nav">
                    <li class="<%= typeof page !== 'undefined' && page === 'userpages' ? 'active' : '' %>"><a href="/userpages">Home</a></li>
                  </ul>
                  
                  <div class="col-sm-3 col-md-3 navbar-center">
                    <form class="navbar-form" role="search" action="/userpages" method="GET">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for a profile" name="search">
                        <div class="input-group-btn">
                            <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                        </div>
                    </div>
                    </form>
                  </div>
                  
                  <ul class="nav navbar-nav navbar-right">
                      <% if(!currentUser){ %> 
                      <li><a href="/login">Login</a></li>
                      <li><a href="/register">Sign Up</a></li>
                    <% } else { %>
                      <li><a href="#">Signed In As <%= currentUser.username %></a></li>
                      <li><a href="/logout">Logout</a></li>
                    <% } %>
                  </ul>
                </div>
            </div>
        </nav>
        
        <div class="container">


    <header class="jumbotron">
        <div class="container text-center">
            <h1>OverHyped</h1>
            <p>Create a profile, take photos, and share them on your photoblog!</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/userpages/new">Create a Profile</a>
            </p>
        </div>
    </header>

    
    <div class="row text-center" style="display:flex; flex-wrap: wrap;"> 
        <% if(noResults !== null) { %> <!--if user searched for a userpage and no results were returned, then display msg telling user so -->
            <h3 class="col-xs-12"><%= noResults %></h3>
        <% } %>
        <% userpages.forEach(function(userpage){ %>
        <div class="col-md-5ths col-sm-6 profile">
            <a href="/userpages/<%= userpage._id%>">
                <div class="thumbnail user">
                    <img src="<%=userpage.image%>"> 
                    <div class="caption">
                        <h4 id="userName" class=""><%= userpage.name %></h4> 
                    </div>
                    <p>
                        View Profile
                    </p>
                </div>
            </a>
        </div>
      <% }); %>
        
    </div>
       

<% include ../partials/footer %>